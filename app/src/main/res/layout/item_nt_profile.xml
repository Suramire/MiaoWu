<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_nt_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_cat_icon_round"
            android:layout_marginStart="@dimen/margin_content"
            android:layout_centerVertical="true"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/tv_nt_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            tools:text="TextView"
            android:layout_centerVertical="true"
            android:layout_marginStart="96dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_content_big"/>


        <Button
            android:id="@+id/btn_nt_follow"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@+id/tv_nt_nickname"
            android:background="@drawable/btn_blue"
            android:layout_marginEnd="16dp"
            android:text="联系TA"
            android:textColor="@color/white"/>

    </RelativeLayout>

